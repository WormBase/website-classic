				);#,td($go_obj)
			 # $subsection_content = $subsection_content."$method,$evidence_code,$term,$go_obj\<br\>"; #print
		}	
		
	}
	$subsection_content = $subsection_content.end_table();
	# print "$subsection_content\n";
	SubSection("",$subsection_content);
}

